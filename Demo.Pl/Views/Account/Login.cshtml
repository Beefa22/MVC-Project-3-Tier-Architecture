@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>

<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="Login" method="post">
					
					<input class="text" asp-for="Email" placeholder="Email" required="">
					
				
					<input class="text" asp-for="Password" placeholder="Password" required="">
					
					<div class="wthree-text">
						<label class="anim">
							<input asp-for="RememberMe" class="checkbox" >
							<span>Remeber Me</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNIN">
				</form>
				<p>You don't have an Account? <a asp-action="Register"> Register Now!</a></p>
				<p> <a asp-action="ForgetPassword">Forget Password?</a></p>
			</div>
		</div>
		<!-- copyright -->
		<div class="colorlibcopy-agile">
			<p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
		</div>
